<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="UserDao">

	<resultMap type="UserVO" id="userMap">
	
		<id column="USR_NO" property="userNo" />
		<result column="USR_ID" property="userId" />
		<result column="USR_NM" property="userName" />
		<result column="USR_PWD" property="userPassword" />
		<result column="USR_PM" property="userPermission" />
		<result column="JOIN_DT" property="userJoinDate" />
		
	</resultMap>
	
	<select id="selectOneUser" parameterType="UserVO" resultMap="userMap">
		SELECT					USR_NO
						,		USR_ID
						,		USR_NM
						,		USR_PWD
						,		USR_PM
						,		JOIN_DT
		FROM					USRS
		WHERE					USR_ID = #{userId}
		AND						USR_PWD = #{userPassword}
	</select>
	
	<select id="selectById" parameterType="String" resultMap="userMap">
		SELECT					USR_ID
						,		USR_NM
						,		USR_PWD
		FROM					USRS         
		WHERE					USR_ID = #{userId} 	
	</select>

	
	
	<insert id="insertNewUser" parameterType="UserVO">
			INSERT	INTO	USRS	(                
											USR_ID  	 
										,	USR_NM 	 
										,	USR_PWD 	 
										,	JOIN_DT 	 
									)               	 
			VALUES					(               	 
											#{userId}       	 
										,	#{userName}	 
										,	#{userPassword}       	 
										,	NOW()        
									)                  
	</insert>

</mapper>

